}
</style>
   


<script>
    const accordion = document.getElementsByClassName('accordion-button');
    const accordionContent = document.getElementsByClassName('accordion-content');
    const arrow = document.getElementsByClassName('arrow-direction');
    for (let i = 0; i < accordion.length; i++) {
        accordion[i].addEventListener('click',function (){
          accordionContent[i].classList.toggle('active')
          arrow[i].classList.toggle('active')
        })
    }
</script>
