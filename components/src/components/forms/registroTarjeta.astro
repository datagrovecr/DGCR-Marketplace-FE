<div class="container-loginform">
    <h2>Formulario de Usuarios</h2>
    <form  method="POST" id="user-form">
      <div class="form-group">
        <label for="nombre">Nombre en la Tarjeta:</label>
        <input type="text" id="nombre" name="nombre" required />
      </div>
      <div class="form-group">
        <label for="telefono">Número de la Tarjeta:</label>
        <input type="number" id="telefono" name="telefono" pattern="[0-9]{16}" required />
        <small>Formato: 12345678</small>
      </div>
      <div class="form-group">
        <label for="correo">Fecha Experiación:</label>
        <input type="date" id="correo" name="correo" required />
      </div>
  
      <div class="form-group">
        <label for="contrasena">Apodo para la tarjeta:</label>
        <input type="text" id="contrasena" name="contrasena" />
      </div>  
      <div class="form-group">
        <input type="submit" value="Enviar" />
      </div>
    </form>
   
  </div>
  
  
  
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
    }
  
    .container-loginform {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
      background-color: #ffffff;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-bottom: 1em;
    }
  
    .container-loginform h2 {
      text-align: center;
    }
  
    .container-loginform .form-group {
      margin-bottom: 15px;
    }
  
    .container-loginform .form-group label {
      display: block;
      font-weight: bold;
    }
  
    .container-loginform .form-group input,
    .container-loginform .form-group select {
      width: 100%;
      padding: 5px;
      border: 1px solid #ccc;
      border-radius: 3px;
    }
  
    .container-loginform .form-group input[type="submit"] {
      background-color: #000000;
      color: #ffffff;
      cursor: pointer;
    }
  
    .container-loginform .form-group input[type="submit"]:hover {
      background-color: #696969;
    }
  
    .container-loginform .form-group .error {
      color: red;
      font-size: 12px;
      margin-top: 5px;
    }
  </style>